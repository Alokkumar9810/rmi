<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd" version="2.2">

	<entity class="company.EmpEntity">        
		<table name="empdetails"/>
		<attributes>
			<id name="id">
				<column name="id"/>
			</id>
			<basic name="name">
				<column name="name"/>
			</basic>
			<basic name="age">
				<column name="age"/>
			</basic>
			<basic name="sal">
				<column name="sal"/>
			</basic>
			<basic name="departmentId">
				<column name="departmentid"/>
			</basic>
		</attributes>
	</entity>

	<entity class="company.DeptEntity">        
		<table name="department"/>
		<attributes>
			<id name="id">
				<column name="id"/>
			</id>
			<basic name="name">
				<column name="name"/>
			</basic>
			<basic name="location">
				<column name="location"/>
			</basic>
		</attributes>
	</entity>

</entity-mappings>

